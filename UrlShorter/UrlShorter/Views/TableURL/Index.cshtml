@using UrlShorter.Models.ViewModels;
@model List<UrlTableViewModel>

<h1>URL List</h1>
<table>
    <tr>
        
        <th>Original URL</th>
        <th>Short URL</th>
        <th>Creation Date</th>
        
        @if (User.Identity.IsAuthenticated)
        {
            <th>Actions</th>
        }
    </tr>
    @foreach (var url in Model)
    {
        <tr>
           
            <td>@url.OriginalUrl</td>
            <td>@url.ShortUrl</td>
            <td>@url.CreationDate</td>
           
            @if (User.Identity.IsAuthenticated)
            {
                @if (url.AllowDelete)
                {
                    <td>
                        <form method="get" action="/TableURL/Delete">
                            <input type="hidden" name="urlId" value="@url.Id" />
                            <input type="submit" value="Delete" />
                        </form>
                    </td>
                }
                
            }
            
                 
        </tr>
    }
</table>

<div style="position : fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="TableURL" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add new
    </a>
</div>





